{
    "name": "ProfSpective",
    "version": "0.1.0",      
    "description": "Test desc",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.mcgill.ca/study/*/courses/*"],
    "background" : {
        "service_worker": "bg.js"
    },

    "content_scripts": [
        {
            "matches": ["https://*.mcgill.ca/study/*/courses/*"],
            "js":["content_script.js"]
        }
    
    ],
    "web_accessible_resources": [
        {
          "resources": [
            "assets/bookmark.png",
            "assets/play.png",
            "assets/delete.png",
            "assets/save.png"
          ],
          "matches": ["https://*.youtube.com/*"]
        }
      ],
    
     
    "action": {
        "default_icon" : {

        },
        "default_title": "ProfSpective",
        "default_popup":"popup.html"
    },

    "manifest_version": 3


}
